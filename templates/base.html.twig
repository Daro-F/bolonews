<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Bolonews{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    </head>

    <body>
        <header>
            <div class="container">
                <div class="logo">
                    <a href="{{ path('app_') }}">Bolonews</a>
                </div>
                <nav>
                    <a href="{{ path('app_') }}">Home</a>
                    <a href="{{ path('app_articles') }}">Articles</a>
                    <a href="{{ path('app_contact') }}">Contact</a>
                </nav>
                <div class="authentification">
                    {% if app.user %}
                        <a href="{{ path('app_profil') }}"><i class="far fa-user"></i> Profil</a>
                        <a href="{{ path('app_logout') }}"><i class="fas fa-sign-out-alt"></i> Déconnexion</a>
                    {% else %}
                        <a href="{{ path('app_login') }}">Se connecter</a>
                        <a href="{{ path('app_register') }}">M'inscrire</a>
                    {% endif %}
                </div>
            </div>
            <div class="title">
                <h1>Bolonews</h1>
                <p>Les meilleures sauces pour les pâtes et de l'actualité sur le grill</p>
            </div>

            <div class='main-profil-container'>
                <div class='new-recherche-bar'>
                    {% if app.user %}
                        <div class="recherche-a">
                            <a href=""><i class="fas fa-pen"></i>Editer un article</a>
                        </div>
                    {% else %}
                        <div>
                            <a href=""></a>
                        </div>
                    {% endif %}

                    {% if form is defined %}
                        <div class="search-bar-container">
                            {{ form_start(form, { method: 'get', attr: { class: 'search-form' } }) }}
                                <div class="search-field">
                                    {{ form_row(form.q, {
                                        label: false,
                                        attr: {
                                            placeholder: 'Rechercher un article...',
                                            class: 'search-input',
                                            id: 'search-input'
                                        }
                                    }) }}
                                    <button type="submit"><i class="fas fa-search"></i></button>
                                </div>
                            {{ form_end(form) }}
                        </div>
                    {% endif %}

                    {% if app.user %}
                        <div class="new-a">
                            <a href=""><i class="fas fa-plus"></i>Ajouter un article</a>
                        </div>
                    {% else %}
                    <div>
                        <a href=""></a>
                    </div>
                    {% endif %}
                </div>
            </div>
            
        </header>
        {% block body %}{% endblock %}
    </body>
</html>
