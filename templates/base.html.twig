<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Bolonews{% endblock %}</title>
        <link rel="stylesheet" href="{{ asset('css/style.css') }}">
    </head>

    <body>
        <header>
            <div class="container">
                <div class="logo">
                    <a href="{{ path('app') }}">Bolonews</a>
                </div>
                <nav>
                    <a href="{{ path('app') }}">Home</a>
                    <a href="{{ path('app_articles') }}">Articles</a>
                    <a href="{{ path('app_contact') }}">Contact</a>
                </nav>
                <div class="authentification">
                <a href="{{ path('app_login') }}">Se connecter</a>
                <a href="{{ path('app_register') }}">M'inscrire</a>
                </div>
            </div>
        </header>
        {% block body %}{% endblock %}
    </body>
</html>
