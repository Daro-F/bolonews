{% extends 'base.html.twig' %}

{% block title %}Nouvel Article{% endblock %}

{% block body %}
    <div class="form-container">
        <h1>Cr√©er un nouvel article</h1>

        {{ form_start(form) }}
            {{ form_row(form.titre) }}
            {{ form_row(form.chapeau) }}
            {{ form_row(form.contenu) }}

            <div class="form-check">
                {{ form_label(form.published, 'Rendre public') }}
                {{ form_widget(form.published) }}
            </div>

            {{ form_row(form.categorie) }}

            <button type="submit">Publier</button>
        {{ form_end(form) }}
    </div>
{% endblock %}
